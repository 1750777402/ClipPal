{
  "$schema": "https://schema.tauri.app/config/2",

  "bundle": {
    "targets": ["msi", "nsis"],

    "windows": {
      "nsis": {
        "installerIcon": "./icons/icon.ico",
        "displayLanguageSelector": true,
        "languages": ["SimpChinese"]
      },
      "wix": {
        "language": "zh-CN"
      },
      "webviewInstallMode": {
        "type": "downloadBootstrapper",
        "silent": true
      }
    }
  },

  "plugins": {
    "updater": {
      "windows": {
        "installMode": "passive"
      }
    }
  }
}
