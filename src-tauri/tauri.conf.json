{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "ClipPal",
  "version": "0.1.0",
  "identifier": "com.jingchuan",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "ClipPal",
        "width": 800,
        "height": 600,
        "resizable": false,
        "decorations": false,
        "alwaysOnBottom": true,
        "visible": false,
        "fullscreen": false,
        "closable": true
      },
      {
        "label": "tray",
        "url": "/tray",
        "resizable": false,
        "center": false,
        "visible": false,
        "width": 130,
        "height": 44,
        "alwaysOnTop": true,
        "skipTaskbar": true,
        "decorations": false,
        "transparent": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "tray"
    ]
  }
}