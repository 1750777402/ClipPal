{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "ClipPal",
  "version": "1.0.6",
  "identifier": "com.jingchuan.clipPal",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "ClipPal",
        "width": 0,
        "height": 0,
        "resizable": false,
        "decorations": false,
        "visible": false,
        "fullscreen": false,
        "closable": true,
        "skipTaskbar": true
      }
    ],
    "security": {
      "csp": null,
      "assetProtocol": {
        "enable": true,
        "scope": [
          "**"
        ]
      }
    }
  },
  "bundle": {
    "active": true,
    "createUpdaterArtifacts": true,
    "targets": [
      "msi",
      "nsis"
    ],
    "icon": [
      "icons/icon_32x32.png",
      "icons/icon_128x128.png",
      "icons/icon_-5.png",
      "icons/icon_-6.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "tray"
    ],
    "windows": {
      "nsis": {
        "installerIcon": "./icons/icon.ico",
        "displayLanguageSelector": true,
        "languages": [
          "SimpChinese"
        ]
      },
      "wix": {
        "language": "zh-CN"
      },
      "webviewInstallMode": {
        "type": "downloadBootstrapper",
        "silent": true
      }
    }
  },
  "plugins": {
    "updater": {
      "active": true,
      "windows": {
        "installMode": "passive"
      },
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDk0RjM0MUU5QzM3OEYxNzUKUldSMThYakQ2VUh6bEhnL2JPcnpXMWNtMy9oY29wYjg0QnRJeVU3OFFCdWpUUUxSVjlFZmxNT1QK",
      "endpoints": [
        "https://gitee.com/ygz123/clip-pal/releases/download/latest/latest.json"
      ]
    }
  }
}